.pre-commit
#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

cd frontend && npm run lint

frontend/package.json
{
    "scripts": {
        "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0 && tsc --noEmit",
        "test": "vitest"
    }
}

frontend/.lintstagedrc.json
{
    "*.ts": [
        "eslint --fix",
        "git add"
    ],
    "*.tsx": [
        "eslint --fix",
        "git add"
    ]
}

frontend/src/__tests__/hello.test.ts
import { describe, it, expect } from 'vitest';

describe('Basic Math', () => {
    it('should add 1 + 1 to equal 2', () => {
        expect(1 + 1).toBe(2);
    });
});
