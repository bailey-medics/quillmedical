    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "9.1.5",
    "@storybook/addon-links": "9.1.5",
    "@storybook/react-vite": "9.1.5",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^24.5.0",
