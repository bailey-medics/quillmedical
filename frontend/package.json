{
  "name": "frontend",
  "private": true,
  "workspaces": [
    "public_pages"
  ],
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "generate:types": "npx tsx scripts/generate-json-from-yaml.ts",
    "predev": "npm run generate:types",
    "prebuild": "npm run generate:types",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "npm run generate:types && storybook build -o ../docs/docs/code/storybook",
    "storybook:test": "test-storybook",
    "storybook:test:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"yarn storybook --no-open --quiet --ci\" \"wait-on tcp:127.0.0.1:6006 && yarn storybook:test\"",
    "docs:build": "typedoc",
    "husky:prepare": "husky",
    "lint-staged": "lint-staged",
    "eslint": "eslint  \"*/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "prettier": "prettier --check \"*/*.{js,jsx,ts,tsx,css,scss,md,json,mdx,html}\" --ignore-unknown",
    "prettier:fix": "prettier --write \"*/*.{js,jsx,ts,tsx,css,scss,md,json,mdx,html}\" --ignore-unknown",
    "stylelint": "stylelint \"*/*.{scss,css}\" --allow-empty-input",
    "style:fix": "stylelint \"*/*.{scss,css}\" --fix --allow-empty-input",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "tsc --project tsconfig.check.json --noEmit",
    "unit-test": "npm run generate:types && vitest --environment jsdom",
    "unit-test:run": "npm run generate:types && vitest --environment jsdom --run --watch=false",
    "unit-test:coverage": "npm run generate:types && vitest --environment jsdom --coverage"
  },
  "dependencies": {
    "@mantine/core": "^8.3.1",
    "@mantine/hooks": "^8.3.1",
    "@mantine/notifications": "^8.3.1",
    "@tabler/icons-react": "^3.34.1",
    "axios": "^1.12.2",
    "dompurify": "^3.2.7",
    "js-cookie": "^3.0.5",
    "qrcode": "^1.5.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "10.2.7",
    "@storybook/addon-links": "10.2.7",
    "@storybook/react-vite": "10.2.7",
    "@storybook/test-runner": "^0.24.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/js-cookie": "^3.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.5.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "concurrently": "^9.2.1",
    "cspell": "^9.2.1",
    "esbuild": "0.25.9",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-storybook": "10.2.7",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^14.0.0",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "storybook": "10.2.7",
    "stylelint": "^16.24.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,mdx,json,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
