    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "storybook": "9.1.5",
    "stylelint": "^16.24.0",
    "stylelint-config-prettier-scss": "^1.0.0",
