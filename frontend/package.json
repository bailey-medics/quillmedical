{
  "name": "frontend",
  "private": true,
  "workspaces": [
    "public_pages"
  ],
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
