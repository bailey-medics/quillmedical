{
  "private": true,
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "lint:eslint": "eslint -c frontend/eslint.config.js \"frontend/**/*.{ts,tsx,js,jsx}\" --max-warnings=0 --format github",
    "lint:prettier": "prettier --check \"frontend/**/*.{js,jsx,ts,tsx,css,scss,md,json,mdx,html}\" --ignore-unknown",
    "lint:style": "stylelint --config frontend/.stylelintrc.* \"frontend/**/*.{scss,css}\" --allow-empty-input",
    "typecheck": "tsc -p frontend/tsconfig.json --noEmit"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "yarn workspace frontend eslint --fix --max-warnings=0",
      "yarn workspace frontend prettier --write"
    ],
    "frontend/**/*.{css,scss,md,json,yml,yaml}": [
      "yarn workspace frontend prettier --write"
    ],
    "frontend/**/*.{css,scss}": [
      "yarn workspace frontend stylelint --fix"
    ]
  }
}
